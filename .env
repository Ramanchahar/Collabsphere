# CollabSphere AI Environment Variables

# Application
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Database Connection Strings
REDIS_URL=redis://localhost:6379
MONGODB_URI=mongodb://collabsphere:collabsphere@localhost:27017/collabsphere?authSource=admin
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=collabsphere
TIMESCALEDB_URI=postgres://collabsphere:collabsphere@localhost:5432/collabsphere
WEAVIATE_URL=http://localhost:8080
RABBITMQ_URL=amqp://collabsphere:collabsphere@localhost:5672

# Object Storage (Minio)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=collabsphere
MINIO_SECRET_KEY=collabsphere
MINIO_USE_SSL=false
MINIO_BUCKET=collabsphere

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-chars
# For production: generate with `openssl rand -base64 32`

# Notion Connector (Taiwei)
NOTION_API_KEY=your-notion-api-key
NOTION_AUTH_REDIRECT_URI=http://localhost:3000/api/auth/callback/notion

# Embedding Model Configuration
EMBEDDING_MODEL=all-mpnet-base-v2
EMBEDDING_DIMENSION=768
VECTOR_SIMILARITY_THRESHOLD=0.75

# Memory System Configuration (Raman)
SENSORY_MEMORY_TTL=300        # 5 minutes in seconds
WORKING_MEMORY_TTL=3600       # 1 hour in seconds
MEMORY_CONSOLIDATION_INTERVAL=600  # 10 minutes in seconds
DEFAULT_CONFIDENCE_THRESHOLD=70
DEFAULT_DOUBT_THRESHOLD=30

# API Rate Limiting
RATE_LIMIT_WINDOW=60000       # 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS=100   # Maximum requests per window

# Logging
LOG_LEVEL=info                # debug, info, warn, error

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_MEMORY_MONITORING=true
ENABLE_KNOWLEDGE_GAPS=true 